{
  "openapi": "3.0.0",
  "info": {
    "title": "example api",
    "version": "1.0.0",
    "description": "because alex demanded it."
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "main production server, where dreams go to die."
    }
  ],
  "tags": [
    {
      "name": "Test"
    }
  ]
  "paths": {
    "/test/hello": {
      "get": {
        "summary": "say hello",
        "description": "returns a friendly greeting, or whatever.",
        "responses": {
          "200": {
            "description": "successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "hello, world!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}